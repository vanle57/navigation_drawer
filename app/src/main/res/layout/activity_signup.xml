<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/colorPrimary"
tools:context="com.example.hongv.navigationdrawer.SignupActivity">

<ImageView
    android:layout_marginTop="@dimen/logo_marginTop"
    android:layout_width="@dimen/logo_width"
    android:layout_height="@dimen/logo_height"
    android:layout_gravity="center"
    android:background="@drawable/logo"
    />

<com.facebook.login.widget.LoginButton
    android:id="@+id/login_button"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/btn_signup_fb_marginTop"
    android:layout_marginLeft="@dimen/btn_signup_fb_marginLeft"
    android:layout_marginRight="@dimen/btn_signup_fb_marginRight"
    android:layout_marginBottom="@dimen/btn_signup_fb_marginBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

</LinearLayout>

